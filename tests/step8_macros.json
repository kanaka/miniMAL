;; Testing trivial macros
["def", "one", ["~", ["fn", [], 1]]]
["one"]
;=>1
["def", "two", ["~", ["fn", [], 2]]]
["two"]
;=>2

;; Testing unless macros
["def", "unless", ["~", ["fn", ["pred", "a", "b"], ["list", ["`", "if"], "pred", "b", "a"]]]]
["unless", false, 7, 8]
;=>7
["unless", true, 7, 8]
;=>8
["def", "unless2", ["~", ["fn", ["pred", "a", "b"], ["list", ["`", "if"], ["list", ["`", "not"], "pred"], "a", "b"]]]]
["unless2", false, 7, 8]
;=>7
["unless2", true, 7, 8]
;=>8

